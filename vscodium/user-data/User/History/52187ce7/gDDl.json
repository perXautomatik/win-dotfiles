    "post_install": [
        "# Get the path to AutoHotkey.exe",
        "$AutoHotkeyPath = Join-Path -Path $dir -ChildPath 'AutoHotkey.exe'",
        "",
        "# Get the path to the script that you want to run in the ahk persist folder",
        "$ScriptPath = Join-Path -Path $(scoop prefix -p ahk) -ChildPath 'myscript.ahk'",
        "",
        "# Set the value of the registry key to AutoHotkey.exe with the script path as an argument",
        "$params = @{",
        "    Path = 'HKCU:\\SOFTWARE\\Microsoft\\Windows\\CurrentVersion\\Run'",
        "    Name = 'AutoHotkey'",
        "    Value = \"`\"$AutoHotkeyPath`\" `\"$ScriptPath`\"\"",
        "}",
        "Set-ItemProperty @params"
    ]
