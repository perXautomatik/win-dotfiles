[core]
	editor = \"C:/Program Files (x86)/GitExtensions/GitExtensions.exe\" fileeditor
	bare = false
	compression = 3
	autocrlf = true
	attributesfile = .gitattributes
	excludesfile = include/ignore
	hideDotFiles = false
	ignorecase = true
	logallrefupdates = true
	longpaths = true
	safecrlf = false
	pager = delta
